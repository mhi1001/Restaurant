@page
@model Restaurant.Pages.Admin.Category.UpsertModel
@{
}
<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">Category</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryObject.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryObject.Name" />
                        <span class="text-danger" asp-validation-for="CategoryObject.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CategoryObject.DisplayOrder"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryObject.DisplayOrder" />
                        <span class="text-danger" asp-validation-for="CategoryObject.DisplayOrder"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col">
                                @if (Model.CategoryObject.Id != 0)//Just to distinguish if the user is editing or creating ofc its editing it will have an ID
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control"> Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
